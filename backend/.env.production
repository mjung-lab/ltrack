# 本番環境設定 (Railway用)
# Railwayでこれらの環境変数を設定してください

# PostgreSQL データベース (Railway提供)
# DATABASE_URL=postgresql://postgres:password@hostname:port/database

# JWT設定
JWT_SECRET=your-super-secure-jwt-secret-key-32-characters-long-for-production
ENCRYPTION_KEY=your-super-secure-32-character-key

# サーバー設定
PORT=3002
NODE_ENV=production

# 本番URL (Railwayドメインに置き換え)
BASE_URL=https://your-app-name.up.railway.app
FRONTEND_URL=https://your-frontend-domain.com

# LINE Bot Webhook設定
WEBHOOK_BASE_URL=https://your-app-name.up.railway.app

# メール設定 (必要に応じて)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_FROM_EMAIL=alerts@ltrack.jp
ALERT_TO_EMAIL=admin@company.com
REPORT_FROM_EMAIL=reports@ltrack.jp

# Slack通知 (オプション)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Webhook転送設定 (オプション)
# WEBHOOK_FORWARD_URLS=https://other-tool-1.com/webhook/line,https://other-tool-2.com/webhook/line
# WEBHOOK_FORWARD_TIMEOUT=5000
